<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".messaging"
    android:background="@color/mycolor5">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagerv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etsendmessage"
            android:layout_width="247dp"
            android:layout_height="43dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/view_bg_message"
            android:hint="Enter the message"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="normal" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingactionbtn"
            android:layout_width="wrap_content"
            android:src="@drawable/baseline_send_24"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="55dp"
            android:contentDescription="Sending the message"
            android:tint="@color/mycolor6"
            app:fabCustomSize="45dp"
            android:layout_marginEnd="4dp"/>

    </LinearLayout>



</RelativeLayout>